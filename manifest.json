{
  "manifest_version": 3,
  "name": "LinkedIn Message Extractor",
  "version": "1.0",
  "description": "Extract LinkedIn conversation messages for sales automation",
  "permissions": ["activeTab", "clipboardWrite"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/messaging/thread/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Message Extractor"
  }
}
